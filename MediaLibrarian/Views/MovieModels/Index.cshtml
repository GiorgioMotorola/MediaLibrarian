@model IEnumerable<MediaLibrarian.Models.MovieModel>

@{
    ViewData["Title"] = "Index";
}

@foreach (var item in Model)
{
    <div class="card mb-3" style="max-width: 1300px;">
        <div class="row g-0">
            <div class="col-md-4">

                 <img src="@item.Image" class="rounded mx-auto d-block" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text"><u>Starring:</u> @item.Stars <br> <u>Directed By:</u> @item.Director <br> <u>Written By:</u> @item.Writer</p>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"><small class="text-muted">@item.MPAA || @item.UserRating || @item.Genre</small></p>
                    <br>
                    @*<a href="Movies/Details/@item.Id" class="btn btn-outline-success">View Movie</a>*@
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a class="btn btn-warning" href="MovieModels/Details/@item.Id" role="button">View Movie</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }