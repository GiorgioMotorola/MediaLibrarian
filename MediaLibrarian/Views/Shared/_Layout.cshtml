<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediaLibrarian</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MediaLibrarian.styles.css" asp-append-version="true" />

</head>

<!doctype html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>


<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="nav-link text-warning" asp-area="" asp-controller="Home" asp-action="Index">MEDIA LIBRARIAN</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="MovieModels" asp-action="Index">Movies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="MusicModels" asp-action="Index">Music</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="TelevisionModels" asp-action="Index">TV Shows</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="VideoGameModels" asp-action="Index">Video Games</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="BookModels" asp-action="Index">Books</a>
                        </li>
                        
                    </ul>

                    <!-- Bootstrap CSS -->
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" integrity="sha512-3q3zxdVn1u91tsTF1c7VH4Px4kl4nwVpVoJ5Y5Zucd5I5L5SFT0wimDgW8J/SOkf+RzCfsuEdtAJJY9Zbq3+BQ==" crossorigin="anonymous" />

                    <!-- Bootstrap JavaScript -->
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.min.js" integrity="sha512-5Wb8uz1NlCik6E39vLSSC1ZlXJ6U+nP6UzKNvnOoLUnOtJeK1GpjO37yE6vCJY+2Q6pijU6rHGLwvAn0Wkvg8Q==" crossorigin="anonymous"></script>

                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#myModal">Create New</button>
                    

                    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <h3>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;Please Select Below</h3>
                                </div>
                                <div class="modal-footer">
                                    <a class="btn btn-primary" asp-area="" asp-controller="MovieModels" asp-action="Create">Movie</a> 
                                    <a class="btn btn-primary" asp-area="" asp-controller="MusicModels" asp-action="Create">Album</a>
                                    <a class="btn btn-primary" asp-area="" asp-controller="TelevisionModels" asp-action="Create">TV Show</a>
                                    <a class="btn btn-primary" asp-area="" asp-controller="VideoGameModels" asp-action="Create">Game</a>
                                    <a class="btn btn-primary" asp-area="" asp-controller="BookModels" asp-action="Create">Book</a>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>




                    @*<form class="d-flex" role="search" asp-controller="MovieModels" asp-action="Index">
                        <input class="form-control me-2" type="text" name="searchString" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>*@


                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


